{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "weita-infographic",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./esm",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "types": ["node"],
    "resolveJsonModule": true,
    "paths": {
      "weita-infographic": ["./src"],
      "weita-infographic/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "lib", "esm"]
}
